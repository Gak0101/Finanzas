#:kivy 2.3.0
#:import FigureCanvasKivyAgg kivy_garden.matplotlib.backend_kivyagg.FigureCanvasKivyAgg
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDButtonText kivymd.uix.button.MDButtonText
#:import MDButtonIcon kivymd.uix.button.MDButtonIcon
#:import MDIconButton kivymd.uix.button.MDIconButton
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDTextFieldHintText kivymd.uix.textfield.MDTextFieldHintText
#:import MDTextFieldHelperText kivymd.uix.textfield.MDTextFieldHelperText
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import AnchorLayout kivy.uix.anchorlayout.AnchorLayout
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window
#:import Popup kivy.uix.popup.Popup

<FadeLabel@MDLabel>:
    opacity: 0
    canvas.before:
        Color:
            rgba: get_color_from_hex('#4CAF50') + [0.1]
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]

<CategoryRow@MDCard>:
    orientation: 'horizontal'
    size_hint_y: None
    height: "64dp"
    padding: "16dp"
    spacing: "16dp"
    md_bg_color: get_color_from_hex('#1A1A1A')
    radius: [12]
    ripple_behavior: True
    elevation: 3
    opacity: 0

    category_id: 0
    category_name: ""
    category_percentage: ""
    category_balance: ""

    canvas.before:
        Color:
            rgba: get_color_from_hex('#222222')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

    MDBoxLayout:
        size_hint_x: 0.1
        adaptive_width: True
        MDIcon:
            icon: "tag-outline"
            theme_icon_color: "Custom"
            icon_color: get_color_from_hex('#4CAF50')
            pos_hint: {'center_y': 0.5}
            font_size: "24sp"

    MDLabel:
        text: root.category_name
        size_hint_x: 0.4
        halign: 'left'
        theme_text_color: "Custom"
        text_color: get_color_from_hex('#FFFFFF')
        font_size: "18sp"
        bold: True
        pos_hint: {'center_y': 0.5}

    MDLabel:
        text: root.category_percentage
        size_hint_x: 0.2
        halign: 'center'
        theme_text_color: "Custom"
        text_color: get_color_from_hex('#4CAF50')
        font_size: "16sp"
        bold: True
        pos_hint: {'center_y': 0.5}

    MDLabel:
        text: root.category_balance
        size_hint_x: 0.2
        halign: 'right'
        theme_text_color: "Custom"
        text_color: get_color_from_hex('#4CAF50')
        font_size: "16sp"
        bold: True
        pos_hint: {'center_y': 0.5}

    MDBoxLayout:
        size_hint_x: None
        width: "100dp"
        adaptive_width: True
        spacing: "8dp"
        pos_hint: {'center_y': 0.5}

        MDIconButton:
            icon: "pencil"
            pos_hint: {'center_y': 0.5}
            theme_icon_color: "Custom"
            icon_color: get_color_from_hex('#64B5F6')
            on_release: app.show_edit_category_popup(root.category_id)

        MDIconButton:
            icon: "trash-can"
            pos_hint: {'center_y': 0.5}
            theme_icon_color: "Custom"
            icon_color: get_color_from_hex('#FF5252')
            on_release: app.delete_category_action(root.category_id)

<FinanceRootWidget>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#0A0A0A')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: "24dp"
        padding: "24dp"

        # --- Top Row: Graph and Categories --- #
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.65
            spacing: "24dp"

            # --- Left Side: Graph --- #
            MDCard:
                id: graph_card
                size_hint_x: 0.45
                orientation: 'vertical'
                elevation: 4
                radius: [15]
                md_bg_color: get_color_from_hex('#1E1E1E')
                ripple_behavior: True
                padding: "16dp"

                MDBoxLayout:
                    size_hint_y: None
                    height: "50dp"
                    padding: ["12dp", "0dp", "12dp", "0dp"]
                    md_bg_color: get_color_from_hex('#1A1A1A')
                    radius: [10]
                    spacing: "10dp"

                    MDIcon:
                        icon: "chart-donut"
                        theme_icon_color: "Custom"
                        icon_color: get_color_from_hex('#64B5F6')
                        size_hint_x: None
                        width: "30dp"
                        font_size: "28sp"
                        pos_hint: {'center_y': 0.5}

                    MDLabel:
                        text: 'DASHBOARD FINANCIERO'
                        font_size: "20sp"
                        bold: True
                        theme_text_color: "Custom"
                        text_color: get_color_from_hex('#FFFFFF')
                        halign: 'left'
                        valign: 'middle'

                BoxLayout:
                    id: graph_placeholder
                    size_hint_y: 1
                    padding: ["0dp", "16dp", "0dp", "0dp"]

            # --- Right Side: Categories --- #
            MDCard:
                id: categories_card
                orientation: 'vertical'
                size_hint_x: 0.55
                elevation: 4
                radius: [15]
                md_bg_color: get_color_from_hex('#1E1E1E')
                padding: "16dp"
                spacing: "12dp"

                MDBoxLayout:
                    size_hint_y: None
                    height: "50dp"
                    padding: ["12dp", "0dp", "12dp", "0dp"]
                    md_bg_color: get_color_from_hex('#1A1A1A')
                    radius: [10]
                    spacing: "10dp"

                    MDIcon:
                        icon: "tag-multiple-outline"
                        theme_icon_color: "Custom"
                        icon_color: get_color_from_hex('#FF9800')
                        size_hint_x: None
                        width: "30dp"
                        font_size: "28sp"
                        pos_hint: {'center_y': 0.5}

                    MDLabel:
                        text: 'CATEGORÍAS DE GASTO'
                        font_size: "20sp"
                        bold: True
                        theme_text_color: "Custom"
                        text_color: get_color_from_hex('#FFFFFF')
                        halign: 'left'
                        valign: 'middle'

                    Widget:
                        size_hint_x: 1

                    MDIconButton:
                        icon: "plus-circle-outline"
                        theme_icon_color: "Custom"
                        icon_color: get_color_from_hex('#4CAF50')
                        pos_hint: {'center_y': 0.5}
                        on_release: app.show_add_category_popup()

                ScrollView:
                    size_hint_y: 1
                    do_scroll_x: False
                    bar_width: dp(8)
                    bar_color: get_color_from_hex('#4CAF50')
                    effect_cls: 'ScrollEffect'

                    GridLayout:
                        id: category_list_layout
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: "8dp"
                        padding: ["0dp", "8dp"]

        # --- Bottom Row: Actions and Log --- #
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.35
            spacing: "24dp"

            # --- Left Side: Actions Card (Add/Distribute) --- #
            MDCard:
                id: actions_card
                orientation: 'vertical'
                size_hint_x: 0.45
                elevation: 4
                radius: [15]
                md_bg_color: get_color_from_hex('#1E1E1E')
                padding: "16dp"
                spacing: "12dp"

                MDBoxLayout:
                    size_hint_y: None
                    height: "50dp"
                    padding: ["12dp", "0dp", "12dp", "0dp"]
                    md_bg_color: get_color_from_hex('#1A1A1A')
                    radius: [10]
                    spacing: "10dp"

                    MDIcon:
                        icon: "cogs"
                        theme_icon_color: "Custom"
                        icon_color: get_color_from_hex('#9C27B0')
                        size_hint_x: None
                        width: "30dp"
                        font_size: "28sp"
                        pos_hint: {'center_y': 0.5}

                    MDLabel:
                        text: 'ACCIONES RÁPIDAS'
                        font_size: "20sp"
                        bold: True
                        theme_text_color: "Custom"
                        text_color: get_color_from_hex('#FFFFFF')
                        halign: 'left'
                        valign: 'middle'

                MDBoxLayout:
                    size_hint_y: None
                    height: "60dp"
                    spacing: "10dp"
                    padding: ["0dp", "10dp"]

                    MDTextField:
                        id: income_input
                        hint_text: "Ingreso a distribuir (€)"
                        mode: "outlined"
                        size_hint_x: 0.7
                        input_filter: "float"
                        helper_text_mode: "on_focus"
                        helper_text: "Introduce el total de ingresos"
                        icon_right: "currency-eur"
                        on_text_validate: app.ui_distribute_income_kivy(self.text)

                    MDButton:
                        size_hint_x: 0.3
                        on_release: app.ui_distribute_income_kivy(income_input.text)
                        md_bg_color: get_color_from_hex('#00796B')
                        pos_hint: {'center_y': 0.5}
                        MDButtonText:
                            text: "Distribuir"

            # --- Right Side: Activity Log Card --- #
            MDCard:
                id: log_card
                orientation: 'vertical'
                size_hint_x: 0.55
                elevation: 4
                radius: [15]
                md_bg_color: get_color_from_hex('#1E1E1E')
                padding: "16dp"
                spacing: "12dp"

                MDBoxLayout:
                    size_hint_y: None
                    height: "50dp"
                    padding: ["12dp", "0dp", "12dp", "0dp"]
                    md_bg_color: get_color_from_hex('#1A1A1A')
                    radius: [10]
                    spacing: "10dp"

                    MDIcon:
                        icon: "clipboard-text-clock-outline"
                        theme_icon_color: "Custom"
                        icon_color: get_color_from_hex('#2196F3')
                        size_hint_x: None
                        width: "30dp"
                        font_size: "28sp"
                        pos_hint: {'center_y': 0.5}

                    MDLabel:
                        text: 'REGISTRO DE ACTIVIDAD'
                        font_size: "20sp"
                        bold: True
                        theme_text_color: "Custom"
                        text_color: get_color_from_hex('#FFFFFF')
                        halign: 'left'
                        valign: 'middle'

                ScrollView:
                    id: log_scroll_view
                    size_hint_y: 1
                    do_scroll_x: False
                    bar_width: dp(8)
                    bar_color: get_color_from_hex('#2196F3')
                    effect_cls: 'ScrollEffect'

                    MDLabel:
                        id: log_display_label
                        text: ""
                        markup: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding: dp(10)
                        font_size: "13sp"
                        line_height: 1.4
                        theme_text_color: "Custom"
                        text_color: get_color_from_hex('#BDBDBD')

<AddCategoryPopup@Popup>:
    title: 'Añadir Nueva Categoría'
    size_hint: 0.6, 0.5
    auto_dismiss: False
    separator_color: get_color_from_hex('#4CAF50')
    title_color: get_color_from_hex('#FFFFFF')
    title_size: '20sp'
    background_color: get_color_from_hex('#1E1E1E')[:3] + [0.95]

    MDBoxLayout:
        orientation: 'vertical'
        padding: "24dp"
        spacing: "16dp"

        MDTextField:
            id: add_category_name_input
            mode: "outlined"
            required: True
            icon_left: "tag"
            MDTextFieldHintText:
                text: "Nombre de la categoría"
                text_color_normal: [1, 1, 1, 0.7]
            MDTextFieldHelperText:
                text: "El nombre es obligatorio"
                mode: "on_error"
                text_color_normal: [0.8, 0.8, 0.8, 0.7]

        MDTextField:
            id: add_category_percentage_input
            mode: "outlined"
            input_filter: "float"
            required: True
            icon_left: "percent"
            MDTextFieldHintText:
                text: "Porcentaje (%)"
                text_color_normal: [1, 1, 1, 0.7]
            MDTextFieldHelperText:
                text: "Debe ser un número positivo"
                mode: "on_error"
                text_color_normal: [0.8, 0.8, 0.8, 0.7]

        MDBoxLayout:
            size_hint_y: None
            height: "48dp"
            spacing: "16dp"
            padding: ["0dp", "8dp", "0dp", "0dp"]

            MDButton:
                md_bg_color: get_color_from_hex('#FF5252')
                on_release: root.dismiss()
                pos_hint: {'center_y': 0.5}
                MDButtonText:
                    text: "Cancelar"

            MDButton:
                md_bg_color: get_color_from_hex('#4CAF50')
                on_release: app.add_category_from_popup(root, add_category_name_input.text, add_category_percentage_input.text)
                pos_hint: {'center_y': 0.5}
                MDButtonText:
                    text: "Añadir Categoría"

<EditCategoryPopup@Popup>:
    title: 'Editar Categoría'
    size_hint: 0.6, 0.5
    auto_dismiss: False
    separator_color: get_color_from_hex('#64B5F6')
    title_color: get_color_from_hex('#FFFFFF')
    title_size: '20sp'
    background_color: get_color_from_hex('#1E1E1E')[:3] + [0.95]

    category_id: 0

    MDBoxLayout:
        orientation: 'vertical'
        padding: "24dp"
        spacing: "16dp"

        Label:
            id: edit_category_id_label
            text: str(root.category_id)
            size_hint_y: None
            height: 0
            opacity: 0

        MDTextField:
            id: edit_category_name_input
            mode: "outlined"
            required: True
            icon_left: "tag"
            MDTextFieldHintText:
                text: "Nuevo nombre"
                text_color_normal: [1, 1, 1, 0.7]
            MDTextFieldHelperText:
                text: "El nombre es obligatorio"
                mode: "on_error"
                text_color_normal: [0.8, 0.8, 0.8, 0.7]

        MDTextField:
            id: edit_category_percentage_input
            mode: "outlined"
            input_filter: "float"
            required: True
            icon_left: "percent"
            MDTextFieldHintText:
                text: "Nuevo porcentaje (%)"
                text_color_normal: [1, 1, 1, 0.7]
            MDTextFieldHelperText:
                text: "Debe ser un número positivo"
                mode: "on_error"
                text_color_normal: [0.8, 0.8, 0.8, 0.7]

        MDBoxLayout:
            size_hint_y: None
            height: "48dp"
            spacing: "16dp"
            padding: ["0dp", "8dp", "0dp", "0dp"]

            MDButton:
                md_bg_color: get_color_from_hex('#FF5252')
                on_release: root.dismiss()
                pos_hint: {'center_y': 0.5}
                MDButtonText:
                    text: "Cancelar"

            MDButton:
                md_bg_color: get_color_from_hex('#64B5F6')
                on_release: app.update_category_from_popup(root, edit_category_id_label.text, edit_category_name_input.text, edit_category_percentage_input.text)
                pos_hint: {'center_y': 0.5}
                MDButtonText:
                    text: "Guardar Cambios"
